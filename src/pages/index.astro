---
import Layout from '../layouts/Layout.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { getCollection } from 'astro:content';
import { siteConfig } from '../config';

const projects = await getCollection('projects');
const featuredProjects = projects.filter(p => p.data.featured).slice(0, 3);
const recentProjects = projects
  .sort((a, b) => (b.data.order || 0) - (a.data.order || 0))
  .slice(0, 4);

const showCollabBadge = siteConfig.openForCollaboration || siteConfig.unavailableMessage;
const collabMessage = siteConfig.openForCollaboration 
  ? siteConfig.collaborationMessage 
  : siteConfig.unavailableMessage;
---

<Layout title="Home">
  <!-- Hero Section -->
  <section class="py-12 md:py-20">
    <div class="max-w-3xl">
      {showCollabBadge && (
        <div class="flex items-center gap-3 mb-4">
          <div class:list={[
            "w-3 h-3 rounded-full",
            siteConfig.openForCollaboration ? "bg-primary animate-pulse" : "bg-base-content/30"
          ]}></div>
          <span class:list={[
            "font-display text-sm",
            siteConfig.openForCollaboration ? "text-primary/80" : "text-base-content/50"
          ]}>{collabMessage}</span>
        </div>
      )}
      
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight">
        <span class="text-base-content">Hello, I'm</span>
        <br />
        <span class="text-gradient">Farzad Fatollahi-Fard</span>
      </h1>
      
      <p class="text-lg md:text-xl text-base-content/80 mb-8 leading-relaxed">
        <span class="text-primary font-display">FPGA Computer Systems Engineer</span> at 
        <a href="https://www.lbl.gov" target="_blank" rel="noopener noreferrer" class="link-underline text-secondary">
          Lawrence Berkeley National Lab
        </a>. I specialize in hardware, firmware, and software for 
        <span class="text-accent">high-performance computing</span> systems.
      </p>
      
      <div class="flex flex-wrap gap-4">
        <a href="/projects/" class="btn btn-primary font-display">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          View Projects
        </a>
        <a href="/cv/" class="btn btn-outline btn-secondary font-display">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          CV
        </a>
      </div>
    </div>
  </section>
  
  <!-- About Section -->
  <section class="py-12 border-t border-primary/10">
    <h2 class="font-display text-2xl font-bold mb-6 flex items-center gap-3">
      <span class="text-primary">//</span> About Me
    </h2>
    
    <div class="grid md:grid-cols-2 gap-8">
      <div class="space-y-4 text-base-content/80">
        <p>
          I hold a <strong class="text-base-content">Bachelor of Science in Electrical Engineering and Computer Science</strong> 
          from the University of California, Berkeley. I chose to be an engineer because I enjoy thinking about 
          problems on a larger scale and developing unique solutions.
        </p>
        <p>
          At Lawrence Berkeley National Lab, I work on creative challenges across the hardware, firmware, and 
          software domains in the HPC design space. The challenge of balancing these domains keeps me engaged 
          in my work on a daily basis.
        </p>
      </div>
      
      <div class="space-y-4">
        <h3 class="font-display text-lg font-semibold text-secondary">Core Expertise</h3>
        <div class="flex flex-wrap gap-2">
          {['FPGA Design', 'Computer Architecture', 'HPC Systems', 'Network-on-Chip', 'Verilog/SystemVerilog', 'Chisel/Scala', 'Python', 'C/C++'].map((skill) => (
            <span class="badge badge-lg bg-base-300 border-primary/20">{skill}</span>
          ))}
        </div>
        
        <h3 class="font-display text-lg font-semibold text-secondary mt-6">Leadership & Strategy</h3>
        <div class="flex flex-wrap gap-2">
          {['Complex Project Management', 'Risk Management', 'Adaptive Leadership', 'Social Intelligence'].map((skill) => (
            <span class="badge badge-lg bg-base-300 border-accent/20">{skill}</span>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- Featured Projects -->
  {recentProjects.length > 0 && (
    <section class="py-12 border-t border-primary/10">
      <div class="flex items-center justify-between mb-6">
        <h2 class="font-display text-2xl font-bold flex items-center gap-3">
          <span class="text-primary">//</span> Featured Projects
        </h2>
        <a href="/projects/" class="btn btn-ghost btn-sm font-display text-primary">
          View All
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
      
      <div class="grid md:grid-cols-2 gap-4">
        {recentProjects.map((project) => (
          <ProjectCard 
            title={project.data.title}
            summary={project.data.summary}
            slug={project.id}
            tags={project.data.tags}
            featured={project.data.featured}
          />
        ))}
      </div>
    </section>
  )}
  
  <!-- Contact CTA -->
  <section class="py-12 border-t border-primary/10">
    <div class="card bg-gradient-to-br from-base-200 to-base-300 border border-primary/20">
      <div class="card-body text-center py-12">
        <h2 class="font-display text-2xl font-bold mb-4">Let's Connect</h2>
        <p class="text-base-content/70 mb-6 max-w-md mx-auto">
          Interested in collaborating on HPC systems, FPGA development, or computer architecture research? 
          I'd love to hear from you.
        </p>
        <div class="flex justify-center gap-4 flex-wrap">
          <a href="mailto:farzadfatollahifard@gmail.com" class="btn btn-primary font-display">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Send Email
          </a>
          <a href="tel:415-625-3935" class="btn btn-outline btn-secondary font-display">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call
          </a>
          <a href="sms:415-625-3935" class="btn btn-outline btn-accent font-display">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            Text
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
