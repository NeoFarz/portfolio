---
import Layout from '../../layouts/Layout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => (b.data.order || 0) - (a.data.order || 0));

// Group by featured
const featuredProjects = sortedProjects.filter(p => p.data.featured);
const otherProjects = sortedProjects.filter(p => !p.data.featured);
---

<Layout title="Projects" description="A collection of projects in FPGA development, computer architecture, and high-performance computing.">
  <section class="py-8">
    <div class="mb-8">
      <h1 class="text-4xl font-display font-bold mb-4">
        <span class="text-primary">//</span> Projects
      </h1>
      <p class="text-base-content/70 max-w-2xl">
        A collection of my work in FPGA development, computer architecture research, and 
        high-performance computing systems at Lawrence Berkeley National Lab.
      </p>
    </div>
    
    {featuredProjects.length > 0 && (
      <div class="mb-12">
        <h2 class="font-display text-xl font-semibold mb-4 text-secondary flex items-center gap-2">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
          </svg>
          Featured
        </h2>
        <div class="grid md:grid-cols-2 gap-4">
          {featuredProjects.map((project) => (
            <ProjectCard 
              title={project.data.title}
              summary={project.data.summary}
              slug={project.id}
              tags={project.data.tags}
              featured={true}
            />
          ))}
        </div>
      </div>
    )}
    
    {otherProjects.length > 0 && (
      <div>
        <h2 class="font-display text-xl font-semibold mb-4 text-secondary">
          All Projects
        </h2>
        <div class="grid md:grid-cols-2 gap-4">
          {otherProjects.map((project) => (
            <ProjectCard 
              title={project.data.title}
              summary={project.data.summary}
              slug={project.id}
              tags={project.data.tags}
            />
          ))}
        </div>
      </div>
    )}
  </section>
</Layout>
