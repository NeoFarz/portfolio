---
interface Props {
  title: string;
  summary: string;
  slug: string;
  tags?: string[];
  featured?: boolean;
}

const { title, summary, slug, tags = [], featured = false } = Astro.props;
---

<a 
  href={`/projects/${slug}/`}
  class:list={[
    'card bg-base-200 card-hover border border-primary/10 group block',
    featured && 'md:col-span-2 border-primary/30'
  ]}
>
  <div class="card-body">
    <div class="flex items-start justify-between gap-4">
      <h3 class="card-title font-display text-lg group-hover:text-primary transition-colors">
        {title}
      </h3>
      {featured && (
        <span class="badge badge-primary badge-sm font-display">Featured</span>
      )}
    </div>
    
    <p class="text-base-content/70 text-sm leading-relaxed">
      {summary}
    </p>
    
    {tags.length > 0 && (
      <div class="card-actions mt-4">
        {tags.map((tag) => (
          <span class="badge badge-outline badge-sm text-xs opacity-70">{tag}</span>
        ))}
      </div>
    )}
    
    <div class="mt-4 flex items-center gap-2 text-primary text-sm font-display opacity-0 group-hover:opacity-100 transition-opacity">
      <span>View Project</span>
      <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </div>
  </div>
</a>
