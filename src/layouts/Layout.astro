---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'FPGA Computer Systems Engineer at Lawrence Berkeley National Lab' } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="circuit">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | Farzad Fatollahi-Fard</title>
  </head>
  <body class="min-h-screen flex flex-col bg-base-100 circuit-grid">
    <Navbar />
    <main class="flex-1 container mx-auto px-4 py-8 max-w-5xl">
      <slot />
    </main>
    <Footer />
    
    <script is:inline>
      // Theme handling
      function getTheme() {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'circuit';
        }
        return 'daylight';
      }
      
      function setTheme(theme) {
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
        updateThemeIcon(theme);
      }
      
      function updateThemeIcon(theme) {
        const sunIcon = document.getElementById('sun-icon');
        const moonIcon = document.getElementById('moon-icon');
        if (sunIcon && moonIcon) {
          if (theme === 'circuit') {
            sunIcon.classList.remove('hidden');
            moonIcon.classList.add('hidden');
          } else {
            sunIcon.classList.add('hidden');
            moonIcon.classList.remove('hidden');
          }
        }
      }
      
      // Set initial theme
      setTheme(getTheme());
      
      // Theme toggle listener
      document.addEventListener('DOMContentLoaded', () => {
        const themeToggle = document.getElementById('theme-toggle');
        if (themeToggle) {
          themeToggle.addEventListener('click', () => {
            const currentTheme = document.documentElement.getAttribute('data-theme');
            setTheme(currentTheme === 'circuit' ? 'daylight' : 'circuit');
          });
        }
        updateThemeIcon(getTheme());
      });
    </script>
  </body>
</html>
